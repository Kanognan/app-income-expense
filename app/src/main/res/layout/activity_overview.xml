<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OverViewActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/wallet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/Account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingTop="25dp"
                    android:text="บัญชีของฉัน"
                    android:textSize="20sp" />
                <!--                -&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F3F3F3"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/Account"
                    android:paddingRight="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/editwallet"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:background="#FFC107"
                        android:text="แก้ไข"
                        android:textAllCaps="true"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/edit3"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/income"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="16dp"
                    android:src="@drawable/income"
                    android:layout_below="@+id/wallet"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/all1"
                    android:paddingLeft="50dp"
                    android:paddingTop="30dp"
                    android:text="0"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/all1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingTop="30dp"
                    android:text="รายรับ"
                    android:layout_below="@+id/wallet"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cur1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wallet"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:paddingTop="30dp"
                    android:paddingRight="10dp"
                    android:text="บาท"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_cost"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/income"
                    android:paddingTop="15dp"
                    android:src="@drawable/cost" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/income"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/all2"
                    android:paddingLeft="40dp"
                    android:paddingTop="30dp"
                    android:text="0"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/all2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingTop="30dp"
                    android:text="รายจ่าย"
                    android:layout_below="@+id/income"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingRight="10dp"
                    android:text="บาท"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/income"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/all"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/img_cost"
                    android:paddingTop="15dp"
                    android:src="@drawable/all" />
                <TextView
                    android:id="@+id/all3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="100dp"
                    android:paddingTop="30dp"
                    android:text="คงเหลือ"
                    android:layout_below="@+id/img_cost"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_cost"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/all3"
                    android:paddingLeft="42dp"
                    android:paddingTop="30dp"
                    android:text="0"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/cur3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingRight="10dp"
                    android:text="บาท"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/img_cost"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="35dp"
                android:text="วันนี้"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="39dp"
                android:paddingRight="10dp"
                android:text="xx/xx/xx"
                android:textSize="15sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/come"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="รายรับ"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/come1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/come"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cure1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-23dp"
                    android:layout_margin="15dp"
                    android:text="บาท"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#F44336"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="รายจ่าย"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cost1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/cost"
                    android:paddingLeft="50dp"
                    android:paddingTop="15dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cure2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cost"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-23dp"
                    android:layout_marginRight="15dp"
                    android:text="บาท"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>